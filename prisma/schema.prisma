// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model inRegister {
  id        Int     @id @default(autoincrement())
  regNo     Int     @unique
  date      DateTime
  courier   String?
  party     String?
  item      String?
  qty       Int
  department String?
  deptRef   String?
  remark    String?
  others    String?
  complete  String?  @default("Open") // âœ… Change `Boolean` to `Status` ENUM
}

model Party {
  id       Int     @id @default(autoincrement())
  name     String
  type     String?
  address  String?
  contact  String?
  gst      String?
  state    String?
  code     Int?
  dlno     String?
  credit   Float?
}



model Item {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  hsn     Int?
  min     Int?
  vendor  String?  // Assuming vendor is a name or ID (change type if needed)
  rate    Float?
  tax     Float?
}




model Department {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Courier {
  id   Int    @id @default(autoincrement())
  name String @unique
}
